{% extends 'admin/index.html.twig' %}

{% block title %}{{ pageTitle }}{% endblock %}

 {% block stylesheets %}
     {{ parent() }}
     {{ encore_entry_link_tags('admin-tables') }}
 {% endblock %}

{% block body %}
    <main class="admin-tables">
        <div class="container">
            {% if app.user.roles[0] == "ROLE_COLLECTOR" %}
            <div class="progress">
                <div class="progress-bar bg-success" role="progressbar" aria-valuenow="2" aria-valuemin="0" aria-valuemax="7" style="width: 14%">
                    1 sur 7
                </div>
            </div>
            {% endif %}

            <h1 class="primary-title">{{ pageTitle }}</h1>
            <div class="text-right">
                <a class="text-right" href="{{ path('show_collect') }}">
                    Collectes à venir
                </a>
                
            <div class="row align-items-center border mb-2 mt-4">
                {# legende #}
                <div class="col-4 text-center">
                    Blanc : estimation active
                </div>
                <div class="col-4 text-center bg-warning">
                    Orange : + de 15 jours
                </div>
                <div class="col-4 text-center bg-danger">
                    Rouge : + de 30 jours
                </div>

            </div>
            <div class="row align-items-center table-head rounded-top">
                {# titles #}
                <div class="col-3 text-center">
                    Nom - Prénom
                </div>
                <div class="col-3 text-center">
                    Téléphone
                </div>
                <div class="col-2 text-center">
                    Montant
                </div>
                <div class="col-2 text-center">
                    Date
                </div>
                <div class="col-2">
                </div>
            </div>

            {% for estimation in estimations %}
                <div class="row align-items-center border-bottom">
                    {# content #}
                    <div class="col-3 text-center">
                        {% if estimation.user is not null%}
                            {{  estimation.user.lastname }} {{ estimation.user.firstname }}
                        {% else %}
                            Utilisateur Anonyme
                        {% endif %}
                    </div>
                    {% set difference = date(estimation.estimationDate()).diff(date("now")) %}
                    {% if difference.days < 15 %}
                        <div class="col-3 text-center ">
                    {% elseif difference.days > 15 and difference.days < 30 %}
                        <div class="col-3 text-center bg-warning">
                    {% else %}
                        <div class="col-3 text-center bg-danger">
                    {% endif %}
                        {{ estimation.brand }} {{ estimation.model }}
                    </div>
                    <div class="col-2 text-center ">
                        {{ estimation.estimatedPrice }} €
                    </div>
                    <div class="col-2 text-center">
                        {{ estimation.estimationDate | date('d/m/Y') }}
                    </div>
                    {% if estimation.isCollected == 0 and estimation.user is null %}
                        <a class="col-2 fourth-button" href="{{ path('estimations_show', {id: estimation.id}) }}">
                            Détails
                        </a>
                    {% elseif estimation.isCollected == 0 %}
                        <a class="col-2 primary-button" href="{{ path('verifyEstim', {id: estimation.id}) }}">
                            Collecter
                        </a>
                    {% else %}
                        <a class="col-2 fourth-button" href="{{ path('estimations_show', {id: estimation.id}) }}">
                            Détails
                        </a>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </main>
{% endblock %}