{% extends 'admin/index.html.twig' %}

{% block title %}Estimations index{% endblock %}
 {% block stylesheets %}
     {{ parent() }}
     {{ encore_entry_link_tags('estimationAdmin') }}
 {% endblock %}
{% block body %}
    <h1 class="primary-title">Estimations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom Pr√©nom</th>
                <th>Plus d'infos</th>
                <th>Edition</th>
                <th>Collecter</th>

            </tr>
        </thead>
        <tbody>
        {% for estimation in estimations %}
            <tr>
                <td class="infoUser">
                    {% if estimation.user is not null%}
                        {{ estimation.user.lastname }}
                        {{ estimation.user.firstname }}
                </td>
                    {% endif %}

                <td class="fourth-button info">
                    <a href="{{ path('estimations_show', {'id': estimation.id}) }}">Plus d'infos</a></td>
                 <td class="fourth-button editEstim">
                     <a href="{{ path('estimations_edit', {'id': estimation.id}) }}">Edition</a></td>
                <td class="fourth-button buttonsCollecters">
                    <a href="#">Collecter</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('estimations_new') }}">Create new</a>
{% endblock %}
