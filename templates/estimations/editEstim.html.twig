{% extends 'admin/index.html.twig' %}

{% block title %}Vérification de l'estimation{% endblock %}

{% block body %}

    <main class="container">
        <div class="progress">
            <div class="progress-bar bg-success" role="progressbar" aria-valuenow="2" aria-valuemin="0" aria-valuemax="7" style="width: 28%">
                2 sur 7
            </div>
        </div>
        <div class="row">
            <div class="col-12 mx-auto text-center form p-4">
                <h1 class="primary-title">Etape 2 : vérification des informations</h1>
            </div>
        </div>

        <div class="row font-weight-bold bg-info text-center">
               <h4 class="m-auto text-light p-3">Informations fournies</h4>
        </div>

        <div class="row bg-light pt-3 ">
            <div class="offset-2 text-center col-4 align-items-center">
                <p>Marque :</p>
            </div>
            <div class="col-4 text-center">
               <p>{{  estimation.brand }}</p>
            </div>
        </div>

        <div class="row bg-light pt-3">
            <div class="offset-2 text-center col-4 align-items-center">
                <p>Modèle :</p>
            </div>
            <div class="col-4 text-center">
                <p>{{ estimation.model }}</p>
            </div>
        </div>

        <div class="row bg-light pt-3">
            <div class="offset-2 col-4 text-center align-items-center">
                <p>Capacité :</p>
            </div>
            <div class="col-4 text-center">
                <p>{{ estimation.capacity }} Go</p>
            </div>
        </div>

        <div class="row bg-light pt-3">
            <div class="offset-2 col-4 text-center align-items-center">
                <p>Dégât par un liquide :</p>
            </div>
            <div class="col-4 text-center">
               {% if estimation.liquidDamage > 0 %}
                   OUI
                {% else %}
                   NON
                {% endif %}
            </div>
        </div>

        <div class="row bg-light pt-3">
            <div class="offset-2 col-4 text-center align-items-center">
                <p>Ecran abimé :</p>
            </div>
            <div class="col-4 text-center">
                {% if estimation.screenCracks > 0 %}
                   OUI
                {% else %}
                   NON
                {% endif %}
            </div>
        </div>

        <div class="row bg-light pt-3">
            <div class="offset-2 col-4 text-center align-items-center">
                <p>Coque abimée :</p>
            </div>
            <div class="col-4 text-center">
                {% if estimation.casingCracks > 0 %}
                    OUI
                {% else %}
                    NON
                {% endif %}
            </div>
        </div>

        <div class="row bg-light pt-3">
            <div class="offset-2 col-4 text-center align-items-center">
                <p>Batterie défectueuse :</p>
            </div>
            <div class="col-4 text-center">
                {% if estimation.batteryCracks > 0 %}
                    OUI
                {% else %}
                    NON
                {% endif %}
            </div>
        </div>

        <div class="row bg-light pt-3">
            <div class="offset-2 col-4 text-center align-items-center">
                <p>Bouton(s) défectueux :</p>
            </div>
            <div class="col-4 text-center">
                {% if estimation.buttonCracks > 0 %}
                    OUI
                {% else %}
                    NON
                {% endif %}
            </div>
        </div>

        <div class="row bg-light pt-3">
            <div class="offset-2 col-4 text-center align-items-center">
                <p>Prix estimé :</p>
            </div>
            <div class="col-4 text-center font-weight-bold">
                {{ estimation.estimatedPrice}} €
            </div>
        </div>

        {{ form_start(form) }}
        <div class="row bg-light pt-3">
            <div class="offset-2 col-4 text-center align-items-center">
                {{ form_label(form.imei) }}
            </div>
            <div class="col-4 text-center font-weight-bold">
                {{ form_widget(form.imei) }}
            </div>
            {{ form_widget(form.submit) }}
        </div>
        {{ form_end(form) }}

        <div class="row bg-light p-4">
            <p class="font-italic mx-auto">Pour réévaluer l'estimation, cliquez sur "mettre à jour"</p>
        </div>

        <div class="row">
            <div class="col-4 mx-auto text-left form p-4">
                <a href="{{ path('estimations_index') }}" class="btn btn-dark"><- Précédent</a>
            </div>
            <div class="col-8 mx-auto text-right form p-4">
                <a href="{{ path('modify_estimationBrand', {id: estimation.id}) }}" class="btn btn-info">Mettre à jour</a>
                <a href="{{ path('verifyUser', { id: estimation.id}) }}" class="btn btn-success">Informations vérifiées, étape suivante -></a>
            </div>
        </div>
    </main>

{% endblock %}
