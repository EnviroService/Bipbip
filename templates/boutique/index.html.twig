{% extends 'admin/index.html.twig' %}

{% block title %}Boutique admin{% endblock %}

{% block body %}
    <h1 class="third-title text-center mt-3">Boutique</h1>

    <table class="table text-center">
        <thead>
            <tr class="bg-light">
                <th>Id</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Capacity</th>
                <th>Couleur</th>
                <th>Etat</th>
                <th>Prix</th>
                <th>DateAjout</th>
                <th>IsPromo</th>
                <th>IsSold</th>
                <th>DateSold</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for boutique in boutiques %}
            <tr>
                <td>{{ boutique.id }}</td>
                <td>{{ boutique.brand }}</td>
                <td>{{ boutique.model }}</td>
                <td>{{ boutique.capacity }}</td>
                <td>{{ boutique.couleur }}</td>
                <td>{{ boutique.etat }}</td>
                <td>{{ boutique.prix }}</td>
                <td>{{ boutique.dateAjout ? boutique.dateAjout|date('d-m-Y') : '' }}</td>
                <td>{{ boutique.isPromo ? 'Yes' : 'No' }}</td>
                <td>{{ boutique.isSold ? 'Yes' : 'No' }}</td>
                <td>{{ boutique.dateSold ? boutique.dateSold|date('d-m-Y') : '' }}</td>
                <td>
                    <a href="{{ path('boutique_show', {'id': boutique.id}) }}" class="btn btn-info mb-2">show</a>
                    <a href="{{ path('boutique_edit', {'id': boutique.id}) }}" class="btn btn-success">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('boutique_new') }}" class="btn btn-dark">Create new</a>
{% endblock %}
