{% extends 'base.html.twig' %}

{% block title %}Organisms{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('partnerPage') }}
{% endblock %}

{% block body %}

    <main class="partnerPage">


        <img title="{{organism.organismName }} {{ organism.organismStatus }}" src="/uploads/Logos/Logos/{{ organism.logo }}" alt="{{ organism.organismName }}">


        <div class="partnerInfo">
            <p class="text-left">{{ organism.description }}</p>

            <div class="desBlock">
                <p>{{ organism.organismAddress }}</p>

                <p>{{ organism.organismCity }}</p>

                <p>{{ organism.organismPostcode }}</p>

                <p>{{ organism.organismPhone }}</p>
            </div>


        </div>

        <div id="clickLink">

            <a class="linkA"  target="_blank" href="{{ organism.organismLink }}">Visiter le site</a>

            <a class="secondary-button" href="{{ path('organisms_index') }}">Retour Ã  la liste</a>
        <br>


        {% if is_granted("ROLE_ADMIN") %}
            <a class="secondary-button edit" href="{{ path('admin_organism_edit', {'id': organism.id}) }}">Modifier</a>
        {% endif %}

        {% if is_granted("ROLE_ADMIN") %}
            {{ include('organisms/_delete_form.html.twig') }}
        {% endif %}


        </div>

    </main>
{% endblock %}
