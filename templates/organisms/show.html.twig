{% extends 'base.html.twig' %}

{% block title %}Organisms{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('partnerPage') }}
{% endblock %}

{% block body %}

    <main class="partnerPage">


        <img title="{{organism.organismName }} {{ organism.organismStatus }}" src="{{ organism.logo }}" alt="{{ organism.organismName }}">


        <div class="partnerInfo">
            <p>{{ organism.description }}</p>

            <div class="desBlock">
                <p>{{ organism.organismAddress }}</p>

                <p>{{ organism.organismCity }}</p>

                <p>{{ organism.organismPostcode }}</p>

                <p>{{ organism.organismPhone }}</p>
            </div>


        </div>


        <p><a class="linkA" href="{{ organism.organismLink }}">Visiter le site</a></p>

        <div id="clickLink">

        <a href="{{ path('organisms_index') }}">Retour Ã  la liste</a>
        <br>

        {% if is_granted("ROLE_ADMIN") %}
            <a href="{{ path('organisms_edit', {'id': organism.id}) }}">Modifier</a>
        {% endif %}

        {% if is_granted("ROLE_ADMIN") %}
            {{ include('organisms/_delete_form.html.twig') }}
        {% endif %}

        </div>

    </main>
{% endblock %}
