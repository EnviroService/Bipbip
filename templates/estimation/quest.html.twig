{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('final_estimation') }}
{% endblock %}
{% block body %}
<main id="final_estimation">
    <div class="container jumbotron p-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="primary-title">Dernière étape</h1>
                <h2 class="text-dark">{{ brand }}</h2>
                <h3 class="text-dark">{{ model }}</h3>
                <h4 class="text-dark">{{ capacity }} Go</h4>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row question-row">
            <div class="col-10">
                <h4>Ton téléphone a t-il été en contact avec de l'eau ?</h4>
            </div>
            <div class="bubble-info">
                <img class="bubble-info-img" src="/images/info.png" alt="">
                <div class="bubble-info-bg">
                </div>
                <p class="bubble-info-txt">Si ton téléphone est tombé dans l'eau, coche 'oui'</p>
            </div>
        </div>
        <div class="row">
            <div class="col-10 choice">
                {{ form_start(form) }}
                {{ form_widget(form.liquid_damage, {'attr': {'class': 'mx-4 choice-box', 'placeholder': ''}}) }}
            </div>
        </div>
    </div>

    <div class="container jumbo">
        <div class="row question-row">
            <div class="col-10">
                <h4>Ton écran est-il endommagé ?</h4>
            </div>
            <div class="bubble-info">
                <img class="bubble-info-img" src="/images/info.png" alt="">
                <div class="bubble-info-bg">
                </div>
                <p class="bubble-info-txt">Même si l'écran ne contient qu'une petite griffe, il est considéré comme endommagé</p>
            </div>
        </div>
        <div class="row">
            <div class="col-10 choice">
                {{ form_widget(form.screenCracks, {'attr': {'class': 'mx-4 choice-box', 'placeholder': ''}}) }}
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row  question-row">
            <div class="col-10">
                <h4>La coque du téléphone est-elle endommagée ?</h4>
            </div>
            <div class="bubble-info">
                <img class="bubble-info-img" src="/images/info.png" alt="">
                <div class="bubble-info-bg">
                </div>
                <p class="bubble-info-txt">Fissures, griffes, mauvais emboîtement, coche 'oui'</p>
            </div>
        </div>
        <div class="row">
            <div class="col-10 choice">
                {{ form_widget(form.casingCracks, {'attr': {'class': 'mx-4 choice-box', 'placeholder': ''}}) }}
            </div>
        </div>
    </div>

    <div class="container jumbo">
        <div class="row question-row">
            <div class="col-10">
                <h4>As-tu des problèmes de charge au niveau de la batterie ?</h4>
            </div>
            <div class="bubble-info">
                <img class="bubble-info-img" src="/images/info.png" alt="">
                <div class="bubble-info-bg">
                </div>
                <p class="bubble-info-txt">Si tu as l'impression de devoir recherger ton téléphone tous les jours, coche 'oui'</p>
            </div>
        </div>
        <div class="row">
            <div class="col-10 choice">
                {{ form_widget(form.batteryCracks, {'attr': {'class': 'mx-4 choice-box', 'placeholder': ''}}) }}
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row question-row">
            <div class="col-10">
                <h4>Tous les boutons sont-ils fonctionnels ?</h4>
            </div>
            <div class="bubble-info">
                <img class="bubble-info-img" src="/images/info.png" alt="">
                <div class="bubble-info-bg">
                </div>
                <p class="bubble-info-txt">Si un de tes boutons ne fonctionne plus, coche 'non'</p>
            </div>
        </div>
        <div class="row">
            <div class="col-10 choice">
                {{ form_widget(form.buttonCracks, {'attr': {'class': 'mx-4 choice-box', 'placeholder': ''}}) }}
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                {{ form_row(form.submit, {'label': 'Valider', 'class': 'btn btn-primary'}) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <a class="secondary-button" href="{{ path("home") }}">Retour à l'accueil</a>

</main>
{% endblock %}

{%  block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('modal_infos') }}
{% endblock %}

