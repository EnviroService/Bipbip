{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 mx-auto text-center form p-4">
                <h1 class="primary-title">Sélectionne sa mémoire</h1>
                <h2 class="text-dark">{{ brand }}</h2>
                <h3 class="text-dark">{{ model.model }}</h3>
                {% for capacity in capacities %}
                    <a class="btn btn-success mb-3" href="{{ path('remove_estimation_quest', {'id': id, 'brand': brand, 'model': model.model, 'capacity': capacity}) }}">{{ capacity }} Go</a>
                {% endfor %}
            </div>
        </div>
        <div class="row">
            <div class="col-12 mx-auto text-center form p-4">
                <a class="btn btn-primary" href="{{ path("autres") }}">Autre...</a>
            </div>
        </div>
    </div>
{% endblock %}