<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Administration {% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('admin') }}
    {% endblock %}
</head>
{% block body %}
<header>
    <div class="card-id">
        <article>
            <p>Identifiant</p>
            <p>Role</p>
        </article>
        <h1>Bienvenue sur l'interface d'administration</h1>
    </div>
</header>
    <div class="form-group">
        <label for="search-user"></label><input class="form-control" type="text" id="search-user" value="" placeholder="Rechercher"/>
    </div>

<main class="cards-admin">
    <div class="menu-admin">
        <ul class="icon-menu">
            <li class="estimations">
                <a href="{{ path ('estimations_index') }}">Estimations
                </a>
            </li>
            <li class="collecters">
                <a href="#">Collecteurs</a>
                    <button type="button" class="collecterActionsLister">Lister</button>
                    <button type="button" class="collecterActionsAdd">Ajouter</button>
            </li>
            <li class="officialDocuments">
                <a href="#">Documents stockés</a>
                <a class="officialDocumentsBc" href="{{ path ('bdc_index') }}">Bons de cessions</a>
                <a class="officialDocumentsCi" href="{{ path ('bdc_index') }}">Cartes d'identitées</a>
            </li>
        </ul>
    </div>
    <div class="card-central-admin">

    </div>
    {% endblock %}

{%  block javascripts %}
    {{ encore_entry_script_tags('admin') }}

{% endblock %}
</main>
</html>

