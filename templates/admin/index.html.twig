{% extends 'base.html.twig' %}
{% block title %}Administration {% endblock %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('admin') }}
    {% endblock %}
{% block header %}
<header>
    <div class="card-id">
        <ul>
            <li>{{ app.user.firstname }} {{ app.user.lastname }}</li>
            <li>{% for role in app.user.roles|slice(0,1) %}
                {% if role == 'ROLE_ADMIN' %}
                Administrateur
                {% else %}
                Collecteur
                {% endif %}
            {% endfor %}</li>
            <li>{{"now"|date('d/m/Y')}}</li>
        </ul>
        <h1 class="titleAdmin">Bienvenue sur l'interface d'administration</h1>
    </div>
</header>
<div class="jumbotron">
    <div class="container">

    </div>
</div>

<main class="cards-admin">
    <div class="menu-admin">
        <ul class="icon-menu">
            <li class="estimations">
                <a href="{{ path ('estimations_index') }}">Estimations
                </a>
            </li>
            <li class="organisms">
                <a href="#">Organismes</a>
                <a href="{{ path('organisms_index') }}" class="organismsLister">Listes des partenaires</a>
                <a href="{{ path('adminregister_collector') }}" class="organismsActionsAdd">Ajouter un organisme</a>
                <a href="{{ path('collects_index') }}" class="organismsListerCollector">Listes des collecteurs</a>
                <a href="{{ path('collects_new') }}" class="organismsAddCollector">Ajouter un collecteur</a>

            </li>
            <li class="officialDocuments">
                <a href="#">Documents stockés</a>
                <a href="{{ path ('bdc_index') }}" class="officialDocumentsBc">Bons de cessions</a>
                <a href="#" class="officialDocumentsCi">Cartes d'identitées</a>
            </li>
        </ul>
    </div>
    <div class="card-central-admin">
        {% block bodyAdmin %} {% endblock %}</div>
</main>
{% endblock %}
{% block body %}{% endblock %}

{% block footer %}{% endblock %}

{%  block javascripts %}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}

