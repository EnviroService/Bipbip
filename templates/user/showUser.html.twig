{% extends 'base.html.twig' %}

{% block title %}Profil utilisateur{% endblock %}

{% block body %}
<main class="container">
    <h1 class="primary-title">Profil de {{ user.firstname }} {{ user.lastname }}</h1>

    <div class="row mb-3">
        <p class="secondary-title">Collecte</p>
    </div>
    <div class="row mb-3">
            <div class="offset-2 col-8">
        {% if user.collect is not empty %}
        {% for estimation in user.collect.estimations %}
            {% if estimation.status == 5 %}
                <p class="font-weight-bold">Collecte à laquelle tu es inscrit :</p>
                <p>Date : le {{ user.collect.dateCollect ? user.collect.dateCollect|date('d/m/Y à H:i') : '' }}</p>
                <p>Chez : {{ user.collect.collector.organismName }}</p>
                <p>Adresse : {{ user.collect.collector.organismAddress }}, {{ user.collect.collector.organismPostcode }}
                    {{ user.collect.collector.organismCity }}</p>
                <p>Téléphone : 0{{ user.collect.collector.organismPhone }}</p>
                <p>Pour les téléphones suivants:</p>
                {% for estimation in user.collect.estimations %}
                    <div>
                        <p>
                            _ {{ estimation.brand }}
                            {{ estimation.model }}
                            de {{ estimation.capacity }} Go
                            pour une valeur de: {{ estimation.estimatedPrice }} €
                        </p>
                    </div>
                {% endfor %}
                <p><a href="{{ path('reset_collect', {collect: user.collect.id }) }}" class="font-weight-bold">Se désinscrire de cette collecte</a></p>
            {% endif %}
            {% endfor %}

        {% else %}
            <p>Tu n'es inscrit à aucune collecte.</p>
        {% endif %}
            </div>
    </div>
    <div class="row mb-3">
        <p class="secondary-title">Estimations réalisées</p>
    </div>
    {% for estimation in user.estimations | sort() %}
    {# show only estimations validated, and estimation non validated < 15 days #}
        {% set difference = date(estimation.estimationDate()).diff(date("now")) %}
        {% if difference.days < 15 or estimation.isCollected == 1 %}
            <div class="row mb-3 border-bottom pt-2">
                <div class="col-3 font-weight-bold p-3">
                {{ estimation.brand }} {{ estimation.model }}, {{ estimation.capacity }} Go
                </div>
                <div class="col-2 text-center p-3">
                    {{ estimation.maxPrice}} €
                </div>
                {% if estimation.status == 1 %}
                    <div class="col-3 p-3">
                        <p class="text-success">
                            Vendu
                        </p>
                    </div>
                    <div class="col-4">
                        <a class="primary-button mb-3 " href="{{ path('showBDC', {id: estimation.id}) }}" target="_blank">
                            Voir bon Cession
                        </a>
                    </div>
                {% elseif estimation.status == 0 %}
                    <div class="col-3 p-3">
                        <p class="text-warning">
                            Non vendu
                        </p>
                    </div>
                    <div class="col-4">
                        <a class="fourth-button mb-3" href="{{ path('mode_envoi', {'id': estimation.id}) }}">
                            Revendre ce téléphone
                        </a>
                    </div>
                {% elseif estimation.status == 2 %}
                    <div class="col-3 p-3">
                        <p class="text-success">
                            En cours d'envoi
                        </p>
                    </div>
                    <div class="col-3 d-flex align-items-center">
                        <a class="small-button w-auto mb-3" href="{{ path('show_etiquette', {'user': user.id, 'estimation': estimation.id}) }}" target="_blank">
                            Etiquette Chronopost
                        </a>
                    </div>
                {% elseif estimation.status == 4 %}
                    <div class="col-3 p-3">
                        <p class="text-success">
                            En cours d'envoi
                        </p>
                    </div>
                    <div class="col-4">
                        <a class="primary-button mb-3 " href="{{ path('api_chronopost_se', {'id': user.id, 'estimation': estimation.id, 'status': 4}) }}">
                            Recevoir le code Chronopost
                        </a>
                    </div>
                {% elseif estimation.status == 3 %}
                    <div class="col-3 p-3">
                    <p class="text-warning">
                        Refusé
                    </p>
                    </div>
                {% elseif estimation.status == 5 %}
                    <div class="col-3 p-3">
                        <p class="text-success">
                            Enregistré à une collecte
                        </p>
                    </div>
                {% else %}
                    <div class="col-3 p-3">
                    <p class="text-success">
                        Statut non déterminé
                    </p>
                    </div>
                {% endif %}
            </div>
        {% endif %}
    {% else %}
    <div class="d-flex flex-column justify-content-center">
        <div class="">
            <p class="text-center">Tu n'as encore estimé aucun téléphone.</p>
        </div>
        <div class="text-center mt-3">
            <a href="{{ path('new_estimation') }}" class="primary-button text-center">
                Faire une estimation
            </a>
        </div>

    </div>
    {% endfor %}

    <div class="row mb-5">
    </div>

    <div class="row mb-3">
        <p class="secondary-title">Informations personnelles</p>
    </div>
    <div class="row align-items-center border-bottom">
        <div class="offset-2 col-3 text-right p-2">
            Nom
        </div>
        <div class="col-5 text-left p-2 pl-5">
            {{ user.lastname }}
        </div>
    </div>
    <div class="row align-items-center border-bottom">
        <div class="offset-2 col-3 text-right p-2">
            Prénom
        </div>
        <div class="col-5 text-left p-2 pl-5">
            {{ user.firstname|capitalize }}
        </div>
    </div>
    <div class="row align-items-center border-bottom">
        <div class="offset-2 col-3 text-right p-2">
            Email
        </div>
        <div class="col-5 text-left p-2 pl-5">
            {{ user.email }}
        </div>
    </div>
    <div class="row align-items-center border-bottom">
        <div class="offset-2 col-3 text-right p-2">
            Numéro de téléphone
        </div>
        <div class="col-5 text-left p-2 pl-5">
            {{ user.phoneNumber }}
        </div>
    </div>
    <div class="row align-items-center border-bottom">
        <div class="offset-2 col-3 text-right p-2">
            Adresse
        </div>
        <div class="col-5 text-left p-2 pl-5">
            {{ user.address }}
        </div>
    </div>
    <div class="row align-items-center border-bottom">
        <div class="offset-2 col-3 text-right p-2">
            Code postal
        </div>
        <div class="col-5 text-left p-2 pl-5">
            {{ user.postCode }}
        </div>
    </div>
    <div class="row align-items-center border-bottom">
        <div class="offset-2 col-3 text-right p-2">
            Ville
        </div>
        <div class="col-5 text-left p-2 pl-5">
            {{ user.city }}
        </div>
    </div>
    <div class="row align-items-center border-bottom">
        <div class="offset-2 col-3 text-right p-2">
            Organisme rattaché
        </div>
        <div class="col-5 text-left p-2 pl-5">
            {% if user.organism.organismName is defined %}
                {{ user.organism.organismName }}
            {% else %}
                Tu n'appartiens à aucun organisme
            {% endif %}
        </div>
    </div>
    <p class="text-center mt-4">
        <a href="{{ path('user_edit', {'id': user.id}) }}" class="secondary-button text-center">Modifier</a>
    </p>

</main>
{% endblock %}
